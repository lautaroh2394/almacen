<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vistaDatosTxtViewPlataforma"
        android:text="asdf.com"
        android:textSize="36dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vistaDatosTxtViewUsuario"
        android:layout_below="@id/vistaDatosTxtViewPlataforma"
        android:textSize="36dp"
        android:text="Felipe23"/>

    </RelativeLayout>

    <ImageButton
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#b9c0cc"
        android:src="@drawable/ic_menu_forward"
        android:id="@+id/vistaDatosImgBtn"
        />

    </LinearLayout>
